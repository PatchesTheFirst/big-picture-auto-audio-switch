<Application x:Class="BigPictureAutoAudioSwitch.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme colors - will be swapped at runtime by ThemeService -->
                <ResourceDictionary Source="Views/Themes/ThemeColors.Dark.xaml" />
                <!-- Control styles -->
                <ResourceDictionary Source="Views/Styles.xaml" />
                <ResourceDictionary Source="Views/TrayIcon.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
