<Window x:Class="BigPictureAutoAudioSwitch.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="24" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Icon and App Name -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <Image Source="/Assets/Icon.ico" Width="64" Height="64" Margin="0,0,0,12" />
            <TextBlock Text="{Binding AppName}" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" />
            <TextBlock Text="{Binding Version}" 
                       Foreground="{DynamicResource TextSecondaryBrush}" 
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0" />
        </StackPanel>

        <!-- Description -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding Description}" 
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Foreground="{DynamicResource TextSecondaryBrush}" />

        <!-- Copyright -->
        <TextBlock Grid.Row="4" 
                   Text="{Binding Copyright}" 
                   FontSize="11"
                   TextAlignment="Center"
                   Foreground="{DynamicResource TextSecondaryBrush}" />

        <!-- Credits -->
        <Border Grid.Row="6" 
                Background="{DynamicResource SurfaceBrush}" 
                CornerRadius="4" 
                Padding="12">
            <StackPanel>
                <TextBlock Text="Acknowledgments" FontWeight="SemiBold" Margin="0,0,0,8" />
                <TextBlock TextWrapping="Wrap" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="11">
                    • Inspired by BigPictureAudioSwitch by cinterre
                </TextBlock>
                <TextBlock TextWrapping="Wrap" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="11">
                    • Uses H.NotifyIcon for system tray functionality
                </TextBlock>
                <TextBlock TextWrapping="Wrap" 
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="11">
                    • Uses NAudio for audio device management
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- GitHub Button -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="View on GitHub" 
                    Command="{Binding OpenGitHubCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Padding="24,8" />
        </StackPanel>
    </Grid>
</Window>
