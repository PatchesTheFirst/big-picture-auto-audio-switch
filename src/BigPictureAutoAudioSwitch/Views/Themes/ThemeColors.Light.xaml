<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Colors -->
    <!-- Accent: Deeper blue for light mode - better contrast with white text -->
    <Color x:Key="AccentColor">#FF0066B8</Color>
    <Color x:Key="AccentDarkColor">#FF004E8C</Color>
    <Color x:Key="AccentLightColor">#FF1A7AC8</Color>
    
    <!-- Background colors -->
    <Color x:Key="BackgroundColor">#FFF3F3F3</Color>
    <Color x:Key="SurfaceColor">#FFFFFFFF</Color>
    <Color x:Key="SurfaceHoverColor">#FFE8E8E8</Color>
    <Color x:Key="BorderColor">#FFD0D0D0</Color>
    
    <!-- Text colors -->
    <Color x:Key="TextColor">#FF1A1A1A</Color>
    <Color x:Key="TextSecondaryColor">#FF666666</Color>
    <Color x:Key="TextOnAccentColor">#FFFFFFFF</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}" />
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="TextOnAccentBrush" Color="{StaticResource TextOnAccentColor}" />
    
    <!-- Legacy aliases for compatibility -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource AccentDarkColor}" />

</ResourceDictionary>
